<style>
  section {
    height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: start;
    gap: 10px;
  }

  h2 {
    font-size: 2.5rem;
    color: var(--text-color);
  }
  h3 {
    font-size: 2rem;
    color: var(--text-color);
  }

  strong {
    color: var(--contrast);
    box-shadow: 0 0px 1px var(--contrast);
  }

  h2 a {
    color: var(--text-color);
    text-decoration: none;
  }

  h2 a:hover {
    text-decoration: underline;
  }

  span {
    color: var(--contrast);
  }

  #greeting {
    font-size: 1.5rem;
  }
  p {
    color: var(--text-color);
  }

  button {
    padding: 15px;
    background-color: var(--text-color);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  button:hover {
    background-color: var(--contrast);
    transition: background-color 0.3s;
  }

  button a {
    color: var(--primary);
    text-decoration: none;
  }

  section div {
    margin-top: 20px;
    display: flex;
    gap: 20px;
    flex-direction: column;
    width: 100%;
  }

  @media screen and (min-width: 720px) {
    section div {
      flex-direction: row;
    }
  }
</style>
