---
import ThemeToggle from "components/ThemeToggle.astro";
import Icon from "components/Icon.astro";
import type { CollectionEntry } from "astro:content";

const { BASE_URL } = import.meta.env;

interface Props {
  posts?: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

<div id="mobile-nav-dropdown">
  <div id="mobile-buttons">
    <button id="show-menu">
      <Icon icon="list" size="35px" color="current" />
    </button>
    <button id="hide-menu" class="hidden-only-on-mobile">
      <Icon icon="x" size="35px" />
    </button>
  </div>
</div>
<div id="side-nav" class="hidden-only-on-mobile">
  <div id="menu">
    <nav>
      <a href={BASE_URL}
        ><Icon icon="home" size="35px" color="currentcolor" />
        home</a
      >
      <a href={`${BASE_URL}about/`}
        ><Icon icon="about" size="35px" color="currentcolor" />about</a
      >
      <a
        href={posts === undefined ? `${BASE_URL}blog/` : undefined}
        id="blog-link"
        ><Icon icon="article" size="35px" color="currentcolor" />blog</a
      >
      <a href="https://www.linkedin.com/in/yeison-andrey-lice/" target="_blank">
        <Icon icon="linkedin" size="35px" color="currentcolor" />linkedin
      </a>
      <a href="https://github.com/YeisonAndreyLiCe" target="_blank">
        <Icon icon="github" size="35px" color="currentcolor" />github
      </a>
    </nav>
    <div id="theme-toggle-container">
      <ThemeToggle />
    </div>
  </div>
</div>

{
  posts && (
    <div id="posts-list" class="hidden">
      <h2>Recent Posts</h2>
      <ul>
        {posts.map((post) => (
          <li>
            <a href={`${BASE_URL}blog/${post.id}/`}>{post.data.title}</a>
          </li>
        ))}
      </ul>
    </div>
  )
}

<script>
  const addInteractivity = (navbarElement: HTMLElement, isDesktop: boolean) => {
    const links = navbarElement.querySelectorAll("a");
    links.forEach((link) => {
      if (link.href === window.location.href) {
        link.classList.add("active");
      }
      if (!isDesktop && link.id === "blog-link") {
        const baseUrl = window.location.origin;
        link.setAttribute("href", `${baseUrl}/portfolio/blog/`);
      }
    });
  };

  const wrapperFN1 = () => {
    const isDesktop = window.innerWidth > 900;
    const navbarElement = document.getElementById("side-nav");
    if (navbarElement !== null) {
      const showMenu = document.getElementById("show-menu");
      const items = navbarElement.innerHTML;

      showMenu?.addEventListener("click", () => {
        navbarElement.classList.remove("menu-hidden");
        navbarElement.innerHTML = items;
        const hideMenu = document.getElementById("hide-menu");
        hideMenu?.addEventListener("click", () => {
          navbarElement.classList.add("menu-hidden");
          navbarElement.innerHTML = "";
        });
        addInteractivity(navbarElement, isDesktop);
      });
      addInteractivity(navbarElement, isDesktop);
    }

    const showMenu = document.getElementById("show-menu");

    showMenu?.addEventListener("click", () => {
      const hideMenu = document.getElementById("hide-menu");
      hideMenu?.classList.remove("hidden-only-on-mobile");
      const sideNav = document.getElementById("side-nav");
      sideNav?.classList.remove("hidden-only-on-mobile");
      showMenu?.classList.add("hidden-only-on-mobile");
    });

    const hideMenu = document.getElementById("hide-menu");

    hideMenu?.addEventListener("click", () => {
      const showMenu = document.getElementById("show-menu");
      showMenu?.classList.remove("hidden-only-on-mobile");
      const sideNav = document.getElementById("side-nav");
      sideNav?.classList.add("hidden-only-on-mobile");
      hideMenu?.classList.add("hidden-only-on-mobile");
    });

    // Handle blog link click
    const blogLink = document.getElementById("blog-link");
    const postsList = document.getElementById("posts-list");

    if (blogLink && postsList && isDesktop) {
      blogLink.addEventListener("click", (e) => {
        e.preventDefault();
        postsList.classList.toggle("hidden");
      });
    }
  };

  wrapperFN1();

  const onMount = () => {
    const themeToggle = document.getElementById("theme-toggle");
    if (themeToggle) {
      themeToggle.addEventListener("click", window.theme.toggle);
    }
  };

  document.getElementById("show-menu")?.addEventListener("click", onMount);
</script>

<style>
  a {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 4px;
    padding: 8px;
    color: var(--text-color);
  }

  .hidden-only-on-mobile {
    display: none;
  }

  .hidden {
    display: none;
  }

  a.active {
    color: var(--contrast);
  }

  a:hover {
    color: var(--contrast);
    transition: background-color 0.3s;
  }

  #side-nav {
    position: fixed;
    backdrop-filter: blur(10px);
    opacity: 0.95;
    top: 0;
    right: 0;
    height: 100%;
    width: 250px;
    z-index: 3;
    box-shadow: -10px 0px 10px rgba(0, 0, 0, 0.1);
  }

  nav {
    padding-top: 80px;
  }

  #theme-toggle-container {
    position: absolute;
    bottom: 20px;
    left: 93px;
  }

  #mobile-nav-dropdown {
    margin-top: 20px;
  }

  #mobile-buttons {
    color: var(--text-color);
    backdrop-filter: blur(10px);
    opacity: 0.95;
    width: 100%;
    position: fixed;
    top: 0px;
    right: 0px;
    display: flex;
    justify-content: end;
    z-index: 4;
  }

  #mobile-buttons button {
    background-color: transparent;
    backdrop-filter: blur(10px);
    opacity: 0.95;
    color: var(--text-color);
    padding: 4px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  #posts-list {
    position: fixed;
    top: 0;
    left: 100px;
    height: 100%;
    width: 300px;
    background-color: var(--primary);
    padding: 20px;
    overflow-y: auto;
    z-index: 2;
    backdrop-filter: blur(10px);
    opacity: 0.95;
  }

  #posts-list h2 {
    color: var(--text-color);
    margin-bottom: 20px;
  }

  #posts-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  #posts-list li {
    margin-bottom: 15px;
  }

  #posts-list a {
    color: var(--text-color);
    text-decoration: none;
    display: block;
    padding: 8px;
    border-radius: 4px;
  }

  #posts-list a:hover {
    background-color: var(--contrast);
    color: var(--secondary);
  }

  @media screen and (min-width: 900px) {
    .hidden-only-on-mobile {
      display: block;
    }

    #mobile-nav-dropdown {
      display: none;
    }

    #side-nav {
      width: 100px;
      position: fixed;
      z-index: 1;
      background-color: var(--secondary);
      padding-top: 20px;
      padding: 20px;
    }

    #side-nav,
    #menu {
      top: 0;
      left: 0;
      height: 100%;
    }

    nav {
      height: 70%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 100%;
      align-items: center;
      padding-top: unset;
    }

    ul {
      list-style-type: none;
      padding: unset;
      margin: unset;
    }

    #theme-toggle-container {
      position: absolute;
      bottom: 20px;
      left: unset;
    }

    #posts-list {
      right: 100px;
    }
  }
</style>
