---
import BaseLayout from "layouts/Base.astro";
import { Code } from "astro:components";

const contactInfo = `{
  name: "Yeison Liscano",
  github: "https://github.com/YeisonAndreyLiCe",
  linkedin: "https://www.linkedin.com/in/yeison-andrey-lice/",
  email: "no available",
  phone: "no available",
  twitter: "no available"
}`;
---

<BaseLayout
  title="contact information Yeison Liscano"
  description="Yeison Liscano contact information"
>
  <section>
    <h1>Contact Information</h1>
    <Code code={contactInfo} lang={"js"} theme="tokyo-night" />
  </section>
</BaseLayout>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    max-width: 1000px;
    gap: 10px;
    height: 100%;
  }

  h1 {
    color: var(--contrast);
  }

  .astro-code {
    padding: 20px;
    border-radius: 4px;
    background-color: var(--code-background) !important;
  }
</style>
