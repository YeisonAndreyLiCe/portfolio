---
import type { IPostFrontmatter } from "content/config";

type Props = Omit<IPostFrontmatter, "author" | "snippet" | "isDraft" | "tags">;

export type { Props };

const { pubDate, readingTime, title } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div>
  <h1>{title}</h1>
  <slot />
  {formattedDate}
  {readingTime}
</div>
<hr />

<style>
  hr {
    width: 100%;
    border: 1px solid var(--contrast);
  }

  div {
    display: flex;
    flex-direction: column;
    align-items: start;
    width: 100%;
    padding: 20px;
    gap: 20px;
  }

  @media screen and (min-width: 720px) {
    div {
      padding-left: unset;
      padding-right: unset;
    }
  }
</style>
